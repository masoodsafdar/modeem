<odoo>
    <data>

        <template id="login_layout" inherit_id="odoo_web_login_10.login_layout" name="Login Layout Inherit">


            <xpath expr="//div[@class='text-center']" position="replace">
                <div class="img-1">
                <img src="/masa_icons/static/src/img/logo_masa.png" class="img-lg" width="150px" height="150px"/></div>
<br/><br/>
                <div class="text-center">
                    <strong class="login-text" style="font-size:35px;white-space: initial;">
                        <center>
                            تسجيل الدخول
                        </center>
                    </strong>
                </div>
                <br/>
            </xpath>
        </template>
        <template id="login_layout2" inherit_id="odoo_web_login_10.login" name="Login2 Inherit">
            <xpath expr="//input[@name='login']" position="before">
                <div class="test_login">

                    <label for="login" class="test_login_label control-label"
                           style="white-space: initial;">
                        رقم التسجيل او الهوية
                    </label>
                    <i class="icon fa fa-address-card fa-lg" style="color:gray;"></i>

                </div>

            </xpath>
            <xpath expr="//input[@name='password']" position="before">
                <div class="test_login">

                    <label for="password" class="test_login_label control-label" style="white-space: initial;">كلمة المرور
                    </label>

                    <i class="icon fa fa-lock fa-lg" style="color:gray;"></i>
                </div>


            </xpath>

            <xpath expr="//input[@name='login']" position="attributes">
                <attribute name="placeholder"></attribute>
                <attribute name="style"></attribute>
            </xpath>
             <xpath expr="//button[@class='btn btn-primary']" position="replace">

                 <button type="submit" class="btn btn-primary"> تسجيل الدخول</button>
            </xpath>

            <xpath expr="//input[@name='password']" position="attributes">
                <attribute name="placeholder"></attribute>
            </xpath>

        </template>

